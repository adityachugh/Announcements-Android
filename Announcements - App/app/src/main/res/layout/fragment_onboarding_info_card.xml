<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.mindbend.android.announcements.reusableFrags.OnboardingInfoCardFragment">

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_outer_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/card_inner_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_card_title"
                    android:text="Informative text here!"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Some great, informative text will be placed here! Some great, informative text will be placed here! Some great, informative text will be placed here! Some great, informative text will be placed here! "
                    android:id="@+id/info_card_text"/>
            </LinearLayout>
            <com.avikhasija.materialannouncements.RatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ratio="0.429">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/accent"
                    android:src="@color/accent"
                    android:id="@+id/info_card_image"/>
            </com.avikhasija.materialannouncements.RatioLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
