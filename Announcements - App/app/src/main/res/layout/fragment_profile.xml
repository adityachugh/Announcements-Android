<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="io.mindbend.android.announcements.reusableFrags.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.avikhasija.materialannouncements.RatioLayout
            android:id="@+id/user_profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ratio="0.5625">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/landscape"/>

            <LinearLayout
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/profilephoto"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:text="Aditya Chugh"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textSize="26sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
                <TextView
                    android:text="3 Groups"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@android:color/white"
                    android:id="@+id/user_orgs_followed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Interested in swag and swag"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@android:color/white"
                        android:id="@+id/user_interests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="4dp"
                        android:layout_height="0dp"/>
                    <TextView
                        android:text="#Grade12"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@android:color/white"
                        android:id="@+id/user_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </com.avikhasija.materialannouncements.RatioLayout>


        <FrameLayout
            android:id="@+id/profile_content_framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
